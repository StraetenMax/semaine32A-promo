mjml
    //- Head
    mj-head
        mj-title Découvrez notre sélection des meilleures promos
        mj-font(name='Source Sans 3' href='https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap')
        mj-raw.
            <meta charset="UTF-8">
            <meta name='color-scheme' content='light'/>
            <meta name='supported-color-schemes' content='light'/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-all(font-family='"Source Sans 3", Arial, Helvetica, sans serif')/
            mj-class(name='T30-500' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='30px' line-height='40px' font-weight='500')/
            mj-class(name='T30-300' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='30px' line-height='40px' font-weight='300')/
            mj-class(name='T20-500' font-family="Arial, Helvetica, sans-serif" font-style="normal" font-size='20px' line-height='35px' font-weight='500')/
            mj-class(name='T17-500' font-family="Arial, Helvetica, sans-serif" font-style="normal" font-size='18px' line-height='25px' font-weight='500')/
            mj-class(name='T15-500' font-family="Arial, Helvetica, sans-serif" font-style="normal" font-size='15px' line-height='22px' font-weight='500')/
            mj-class(name='T16-500' font-family="Arial, Helvetica, sans-serif" font-style="normal" font-size='16px' line-height='20px' font-weight='500')/
            mj-class(name='T15-300' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='15px' line-height='18px' font-weight="300")/
            mj-class(name='T12-400' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='12px' line-height='13px' font-weight="400")/
            mj-class(name='T9-300' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='9px' line-height='11px' font-weight="300")/
            //- Black colors text
            mj-class(name="cT1" color="#2c262d")/
            mj-class(name="bgT1" background-color="#2c262d")
            mj-class(name="cT0" color="#000000")/
            mj-class(name="cTW" color="#ffffff")/
            mj-class(name="bgW" background-color="#ffffff")/
            //- Colors
            mj-class(name="cB0" color="#1f3c90")/
            mj-class(name="bgB0" background-color="#1f3c90")/
            mj-class(name="cB-1" color="#787fbd")/
            mj-class(name="bgB-1" background-color="#787fbd")/
            mj-class(name="cB+1" color="#423f64")/
            mj-class(name="bgB+1" background-color="#423f64")/
            mj-class(name="cB+2" color="#20274f")/
            mj-class(name="bgB+2" background-color="#20274f")/

        mj-breakpoint(width="480px")
    //- Body
    mj-body(background-color='#f1f0f0' width="700px")
        //- content
        block content
        //- bloc header
        block header
            include ../includes/_header
        //- bloc produits
        block prod
            include ../includes/_prod
        //- bloc footer
            block footer
            include ../includes/_footer
        //- bloc reglement
            block reg
            include ../includes/_reg